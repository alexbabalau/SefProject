<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>CinemaControllerServlet</servlet-name>
  	<display-name>CinemaControllerServlet</display-name>
  	<description></description>
  	<servlet-class>controller.CinemaControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CinemaControllerServlet</servlet-name>
  	<url-pattern>/CinemaControllerServlet</url-pattern>
  </servlet-mapping>
  <resource-ref>
  	<description>DB Connection</description>
  	<res-ref-name>jdbc/cinema_tracker</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
  <welcome-file-list>  
   <welcome-file>main-page.html</welcome-file>    
  </welcome-file-list>  
  
</web-app>
